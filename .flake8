[flake8]
# Flake8 configuration for the project
max-line-length = 120
extend-ignore = 
    # E501: line too long (handled by max-line-length)
    E501,
    # W503: line break before binary operator (conflicts with W504)
    W503,
    # E203: whitespace before ':' (conflicts with black)
    E203,
    # F401: imported but unused (some imports are for re-export)
    F401,
    # F841: local variable assigned but never used
    F841,
    # E266: too many leading '#' for block comment
    E266,
    # E402: module level import not at top of file
    E402
    
exclude = 
    .git,
    __pycache__,
    .venv,
    venv,
    build,
    dist,
    *.egg-info,
    .tox,
    .mypy_cache,
    .pytest_cache,
    outputs

per-file-ignores =
    # F401: Ignore unused imports in __init__ files
    __init__.py:F401
    # Allow unused variables in run scripts
    run_*.py:F841